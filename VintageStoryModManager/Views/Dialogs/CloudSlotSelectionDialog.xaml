<Window x:Class="VintageStoryModManager.Views.Dialogs.CloudSlotSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Cloud Slot"
        SizeToContent="WidthAndHeight"
        MinWidth="360"
        MinHeight="240"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        ShowInTaskbar="False"
        Background="{DynamicResource Brush.Window.Shell.Background.Solid}">
    <Grid Margin="20"
          Background="{DynamicResource Brush.Panel.Primary.Background.Solid}"
          TextElement.Foreground="{DynamicResource Brush.Text.Primary}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="PromptTextBlock"
                   Grid.Row="0"
                   TextWrapping="Wrap"
                   Margin="0,0,0,12"
                   FontSize="14" />

        <ListBox x:Name="SlotsListBox"
                 Grid.Row="1"
                 DisplayMemberPath="DisplayName"
                 MinWidth="300"
                 MaxHeight="260"
                 SelectionMode="Single"
                 MouseDoubleClick="SlotsListBox_OnMouseDoubleClick"
                 SelectionChanged="SlotsListBox_OnSelectionChanged"
                 Background="{DynamicResource Brush.Panel.Secondary.Background.Solid}"
                 Foreground="{DynamicResource Brush.Text.Primary}"
                 BorderBrush="{DynamicResource Brush.Panel.Secondary.Background.Solid}" />

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,18,0,0">
            <Button x:Name="SelectButton"
                    Content="Select"
                    MinWidth="88"
                    Margin="0,0,12,0"
                    IsDefault="True"
                    Click="SelectButton_OnClick" />
            <Button Content="Cancel"
                    MinWidth="88"
                    IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
