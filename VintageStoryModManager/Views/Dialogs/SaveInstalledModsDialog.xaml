<Window x:Class="VintageStoryModManager.Views.Dialogs.SaveInstalledModsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dialogs="clr-namespace:VintageStoryModManager.Views.Dialogs"
        Title="Save Installed Mods"
        SizeToContent="WidthAndHeight"
        MinWidth="560"
        MinHeight="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        ShowInTaskbar="False"
        Loaded="Window_OnLoaded"
        Background="{DynamicResource Brush.Window.Shell.Background.Solid}">
    <Grid Margin="20"
          Background="{DynamicResource Brush.Panel.Primary.Background.Solid}"
          TextElement.Foreground="{DynamicResource Brush.Text.Primary}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Margin="0,0,12,12"
                   VerticalAlignment="Center"
                   Text="List name:" />
        <TextBox x:Name="NameTextBox"
                 Grid.Row="0"
                 Grid.Column="1"
                 Margin="0,0,0,12"
                 MinWidth="320"
                 TextChanged="NameTextBox_OnTextChanged"
                 Background="{DynamicResource Brush.Dialog.TextBox.Background}"
                 BorderBrush="{DynamicResource Brush.Dialog.TextBox.Border}"
                 SelectionBrush="{DynamicResource Brush.Dialog.TextBox.SelectionBackground}"
                 SelectionTextBrush="{DynamicResource Brush.Dialog.TextBox.SelectionForeground}"
                 CaretBrush="{DynamicResource Brush.Dialog.TextBox.Caret}" />

        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Margin="0,0,0,6"
                   Text="Description:" />
        <TextBox x:Name="DescriptionTextBox"
                 Grid.Row="2"
                 Grid.Column="0"
                 Grid.ColumnSpan="2"
                 Margin="0,0,0,12"
                 MinHeight="100"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Background="{DynamicResource Brush.Dialog.TextBox.Background}"
                 BorderBrush="{DynamicResource Brush.Dialog.TextBox.Border}"
                 SelectionBrush="{DynamicResource Brush.Dialog.TextBox.SelectionBackground}"
                 SelectionTextBrush="{DynamicResource Brush.Dialog.TextBox.SelectionForeground}"
                 CaretBrush="{DynamicResource Brush.Dialog.TextBox.Caret}" />

        <TextBlock Grid.Row="3"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Margin="0,0,0,6"
                   Text="Modlist created by..." />
        <TextBox x:Name="CreatedByTextBox"
                 Grid.Row="4"
                 Grid.Column="0"
                 Grid.ColumnSpan="2"
                 Margin="0,0,0,12"
                 Background="{DynamicResource Brush.Dialog.TextBox.Background}"
                 BorderBrush="{DynamicResource Brush.Dialog.TextBox.Border}"
                 SelectionBrush="{DynamicResource Brush.Dialog.TextBox.SelectionBackground}"
                 SelectionTextBrush="{DynamicResource Brush.Dialog.TextBox.SelectionForeground}"
                 CaretBrush="{DynamicResource Brush.Dialog.TextBox.Caret}" />

        <StackPanel Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="0,8,0,4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger
                            Binding="{Binding HasConfigOptions, RelativeSource={RelativeSource AncestorType=Window}}"
                            Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            <TextBlock Text="Configurations to include"
                       FontWeight="SemiBold"
                       Visibility="Collapsed">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger
                                Binding="{Binding HasConfigOptions, RelativeSource={RelativeSource AncestorType=Window}}"
                                Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <CheckBox x:Name="SelectAllCheckBox"
                      Margin="12,0,0,0"
                      Click="SelectAllCheckBox_OnClick"
                      Visibility="Collapsed">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="1.2" ScaleY="1.2" />
                </CheckBox.LayoutTransform>
                <CheckBox.Style>
                    <Style TargetType="CheckBox">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Setter Property="IsEnabled" Value="False" />
                        <Style.Triggers>
                            <DataTrigger
                                Binding="{Binding HasConfigOptions, RelativeSource={RelativeSource AncestorType=Window}}"
                                Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                                <Setter Property="IsEnabled" Value="True" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </CheckBox.Style>
                <CheckBox.Content>
                    <TextBlock Text="Select all">
                        <TextBlock.LayoutTransform>
                            <ScaleTransform ScaleX="0.8333" ScaleY="0.8333" />
                        </TextBlock.LayoutTransform>
                    </TextBlock>
                </CheckBox.Content>
            </CheckBox>
        </StackPanel>

        <Border Grid.Row="6"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                BorderThickness="1"
                BorderBrush="{DynamicResource Brush.Panel.Secondary.Background.Solid}"
                Background="{DynamicResource Brush.Panel.Secondary.Background.Solid}"
                Padding="6"
                Visibility="Collapsed">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger
                            Binding="{Binding HasConfigOptions, RelativeSource={RelativeSource AncestorType=Window}}"
                            Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <ListBox ItemsSource="{Binding ConfigOptions, RelativeSource={RelativeSource AncestorType=Window}}"
                     Height="220"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     Background="{DynamicResource Brush.Panel.Secondary.Background.Solid}"
                     BorderBrush="{DynamicResource Brush.Panel.Secondary.Background.Solid}"
                     Foreground="{DynamicResource Brush.Text.Primary}">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="MinHeight" Value="26" />
                        <Setter Property="Padding" Value="6,0" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type dialogs:ModConfigOption}">
                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  ToolTip="{Binding ConfigPath}"
                                  Margin="0"
                                  VerticalAlignment="Center">
                            <CheckBox.LayoutTransform>
                                <ScaleTransform ScaleX="1.2" ScaleY="1.2" />
                            </CheckBox.LayoutTransform>
                            <CheckBox.Content>
                                <TextBlock Text="{Binding DisplayName}">
                                    <TextBlock.LayoutTransform>
                                        <ScaleTransform ScaleX="0.8333" ScaleY="0.8333" />
                                    </TextBlock.LayoutTransform>
                                </TextBlock>
                            </CheckBox.Content>
                        </CheckBox>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <TextBlock Grid.Row="7"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Margin="0,8,0,0"
                   TextWrapping="Wrap"
                   Opacity="0.6"
                   Visibility="Collapsed"
                   Text="No mods with saved configuration paths were found.">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger
                            Binding="{Binding HasConfigOptions, RelativeSource={RelativeSource AncestorType=Window}}"
                            Value="False">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <StackPanel Grid.Row="8"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,18,0,0">
            <Button x:Name="ConfirmButton"
                    Content="Save"
                    MinWidth="88"
                    Margin="0,0,12,0"
                    IsDefault="True"
                    Click="ConfirmButton_OnClick" />
            <Button Content="Cancel"
                    MinWidth="88"
                    IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>