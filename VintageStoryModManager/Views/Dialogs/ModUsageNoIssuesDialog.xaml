<Window x:Class="VintageStoryModManager.Views.Dialogs.ModUsageNoIssuesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:VintageStoryModManager.ViewModels"
        Title="Sorry for the popup..."
        Height="460"
        Width="600"
        MinHeight="360"
        MinWidth="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        Background="{DynamicResource Brush.Window.Shell.Background.Solid}">
    <Grid Margin="0,24,0,0"
          Background="{DynamicResource Brush.Panel.Primary.Background.Solid}"
          TextElement.Foreground="{DynamicResource Brush.Text.Primary}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Margin="12,0,0,12"
                   FontSize="18"
                   FontWeight="Bold"
                   Text="No issues so far? Let others know these mods work for you." />

        <TextBlock Grid.Row="1"
                   Margin="12,0,0,16"
                   TextWrapping="Wrap"
                   Foreground="{DynamicResource Brush.Text.Subtle}">
            <Run
                Text="You have used these mods for a while now, would you consider marking them as &quot;No issues so far&quot;?" />
            <LineBreak />
            <Run
                Text="It's anonymous and might help other players. You can change your vote in the Installed mods tab." />
            <LineBreak />
            <Run Text="It only applies to this specific mod version and the currently installed Vintage Story version." />
        </TextBlock>

        <ListView x:Name="ModListView"
                  Grid.Row="2"
                  ItemsSource="{Binding Candidates}"
                  BorderThickness="1"
                  BorderBrush="{DynamicResource Brush.Surface.Secondary.Border}"
                  Background="{DynamicResource Brush.Panel.Secondary.Background.Solid}"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  Margin="12,0,12,16">
            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type viewModels:ModUsageVoteCandidateViewModel}">
                    <Border Padding="8" BorderThickness="0,0,0,1"
                            BorderBrush="{DynamicResource Brush.Surface.Secondary.Border}">
                        <DockPanel>
                            <CheckBox DockPanel.Dock="Left"
                                      Margin="0,4,16,0"
                                      VerticalAlignment="Top"
                                      IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                            <StackPanel>
                                <TextBlock FontWeight="SemiBold"
                                           Text="{Binding DisplayLabel}" />
                                <TextBlock Foreground="{DynamicResource Brush.Text.Subtle}"
                                           Margin="0,2,0,0"
                                           Text="{Binding UsageSummary}" />
                            </StackPanel>
                        </DockPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,0,12,12">
            <TextBlock x:Name="StatusTextBlock"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource Brush.Text.Subtle}"
                       Margin="0,0,16,0" />
            <Button Content="Never ask me again"
                    Margin="0,0,8,0"
                    Click="NeverAskAgainButton_OnClick" />
            <Button Content="Not yet"
                    Margin="0,0,8,0"
                    IsCancel="True"
                    Click="RemindMeLaterButton_OnClick" />
            <Button x:Name="SubmitButton"
                    Content="Sounds good!"
                    IsDefault="True"
                    Click="SubmitButton_OnClick" />
        </StackPanel>
    </Grid>
</Window>