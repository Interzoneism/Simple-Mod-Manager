    <!--  Base DataGrid row style for installed mods and mod database grids  -->
    <Style x:Key="IMM.ModsDataGridRowBaseStyle" TargetType="{x:Type DataGridRow}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Button.Bevel.Light}" />
        <Setter Property="BorderThickness" Value="1,1,0,0" />
        <Setter Property="Margin" Value="2,0,2,0" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="Height" Value="Auto" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DataGridRow}">
                    <Border
                        x:Name="RowBorder"
                        Margin="8,0,8,4"
                        Background="{DynamicResource Brush.InstalledMod.Row.Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="12"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True">
                        <Grid>
                            <Border
                                x:Name="SelectionOverlay"
                                Background="{DynamicResource Brush.Accent.Primary}"
                                CornerRadius="12"
                                IsHitTestVisible="False"
                                Opacity="0" />
                            <Border
                                x:Name="HoverOverlay"
                                Background="{DynamicResource Brush.White}"
                                CornerRadius="12"
                                IsHitTestVisible="False"
                                Opacity="0" />
                            <Border
                                Padding="{TemplateBinding Padding}"
                                Background="Transparent"
                                CornerRadius="12">
                                <SelectiveScrollingGrid>
                                    <SelectiveScrollingGrid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                    </SelectiveScrollingGrid.ColumnDefinitions>
                                    <SelectiveScrollingGrid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </SelectiveScrollingGrid.RowDefinitions>
                                    <DataGridCellsPresenter Grid.Column="0" SelectiveScrollingGrid.SelectiveScrollingOrientation="Both" />
                                    <DataGridDetailsPresenter
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        SelectiveScrollingGrid.SelectiveScrollingOrientation="Horizontal"
                                        Visibility="{TemplateBinding DetailsVisibility}" />
                                </SelectiveScrollingGrid>
                            </Border>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding HasErrors}" Value="True">
                            <Setter TargetName="RowBorder" Property="BorderBrush" Value="{DynamicResource Brush.Overlay.Warning.Background}" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding HasActivationError}" Value="True">
                            <Setter TargetName="RowBorder" Property="BorderBrush" Value="{DynamicResource Brush.InstalledMod.Error}" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                            <Setter TargetName="RowBorder" Property="Background" Value="{DynamicResource Brush.ModCard.Background.Disabled}" />
                            <Setter TargetName="RowBorder" Property="Opacity" Value="0.5" />
                        </DataTrigger>
                        <Trigger Property="DetailsVisibility" Value="Visible">
                            <Setter TargetName="RowBorder" Property="BorderThickness" Value="2,2,2,2" />
                        </Trigger>

                        <!--  Hover effect - only active when not loading mods or mod details and hover effects are enabled  -->
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=(helpers:HoverEffectHelper.DisableHoverEffects)}" Value="False" />
                                <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True" />
                                <Condition Binding="{Binding DataContext.IsLoadingMods, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" Value="False" />
                                <Condition Binding="{Binding DataContext.IsLoadingModDetails, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" Value="False" />
                            </MultiDataTrigger.Conditions>
                            <MultiDataTrigger.EnterActions>
                                <BeginStoryboard x:Name="HoverFadeInStoryboard">
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="HoverOverlay"
                                            Storyboard.TargetProperty="Opacity"
                                            To="0.05"
                                            Duration="0:0:0.12" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiDataTrigger.EnterActions>
                            <MultiDataTrigger.ExitActions>
                                <BeginStoryboard x:Name="HoverFadeOutStoryboard">
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="HoverOverlay"
                                            Storyboard.TargetProperty="Opacity"
                                            To="0"
                                            Duration="0:0:0.12" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiDataTrigger.ExitActions>
                        </MultiDataTrigger>

                        <!--  If row becomes selected, ensure hover animations are stopped and overlay hidden.  -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="HoverOverlay" Property="Opacity" Value="0" />
                            <Trigger.EnterActions>
                                <StopStoryboard BeginStoryboardName="HoverFadeInStoryboard" />
                                <StopStoryboard BeginStoryboardName="HoverFadeOutStoryboard" />
                            </Trigger.EnterActions>
                        </Trigger>


                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <DataTrigger Binding="{Binding HasErrors}" Value="True">
                <Setter Property="Background" Value="{DynamicResource Brush.Overlay.Warning.Background}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding HasActivationError}" Value="True">
                <Setter Property="Background" Value="{DynamicResource Brush.Overlay.Warning.Background}" />
            </DataTrigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{DynamicResource Brush.DataGrid.Row.Background.Selected}" />
            </Trigger>
        </Style.Triggers>
    </Style>

